{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "oportunidades/grid",
  "title": "Lista de Oportunidades",
  "category": "widgets",
  "icon": "analytics",
  "description": "Apresenta oportunidades armazenadas localmente com filtros opcionais.",
  "keywords": [
    "oportunidades",
    "pipeline",
    "dados"
  ],
  "textdomain": "oportunidades",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./editor.css",
  "style": "file:./style.css",
  "attributes": {
    "categoria": {
      "type": "string",
      "default": ""
    },
    "distrito": {
      "type": "string",
      "default": ""
    },
    "limite": {
      "type": "number",
      "default": 20
    }
  }
}